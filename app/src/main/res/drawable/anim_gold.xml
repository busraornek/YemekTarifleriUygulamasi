<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/gold"
        android:drawable="@drawable/gold"
        android:state_checked="true"/>
    <item
        android:id="@+id/nogold"
        android:drawable="@drawable/nogold"/>
    <transition
        android:fromId="@id/gold"
        android:toId="@id/nogold"
        android:drawable="@drawable/g_b"/>
    <transition
        android:fromId="@id/nogold"
        android:toId="@id/gold"
        android:drawable="@drawable/b_g"/>
</animated-selector>